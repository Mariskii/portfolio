---
import Layout from '../layouts/Layout.astro';

import Presentation from '@/components/Sections/Presentation/Presentation.astro';
import Projects from '@/components/Sections/Projects/Projects.astro';

import '@/styles/globals.css'
---

<Layout title="Welcome to Astro.">
	<main class="w-full h-full bg-gradient-to-r from-orange-500 to-orange-300">
		<div class="stars w-full h-full"/>
		<div class="absolute w-full h-full">
			<Presentation/>

			<div class="absolute w-full h-fit bg-gray-200 pol">
				<Projects/>
			</div>
		</div>
	</main>
</Layout>

<style>
	.stars {
    background-image: url("/public/star-pattern.png");
    background-size: 10%;
    animation: pan 180s linear infinite;
    opacity: 0.3;
    position: absolute;
    overflow: hidden;
    z-index: 0;
}

.stars::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, transparent, rgb(249 115 22));
}

@keyframes pan {
    0% {
        background-position: 0% 0%;
    }

    100% {
        background-position: 100% 0%;
    }
}

.sawtooth-border {
    background-color: #333;
    color: #fff;
    padding: 20px;
    position: relative;
    clip-path: polygon(
        0% 100%, 
        5% 85%, 
        10% 100%, 
        15% 85%, 
        20% 100%, 
        25% 85%, 
        30% 100%, 
        35% 85%, 
        40% 100%, 
        45% 85%, 
        50% 100%, 
        55% 85%, 
        60% 100%, 
        65% 85%, 
        70% 100%, 
        75% 85%, 
        80% 100%, 
        85% 85%, 
        90% 100%, 
        95% 85%, 
        100% 100%, 
        100% 0%, 
        0% 0%
    );
}
</style>
