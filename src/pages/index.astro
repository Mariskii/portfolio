---
import Layout from '../layouts/Layout.astro';

import Presentation from '@/components/Sections/Presentation/Presentation.astro';
import Projects from '@/components/Sections/Projects/Projects.astro';
import Technologies from '@/components/Sections/Technologies/Technologies.astro';
import Footer from '@/components/Sections/Footer/Footer.astro';

import '@/styles/globals.css'
---

<Layout title="Welcome to Astro.">
	<main class="w-full h-full bg-gradient-to-r from-orange-500 to-orange-300">
		<div class="stars w-full h-full"/>
		<div class="absolute w-full h-full">
			<Presentation/>

			<div class="absolute w-full sawtooth h-fit bg-gray-200 pol flex flex-col gap-20 text-justify">
				<Projects/>

                <Technologies/>

                <Footer/>
			</div>
		</div>
	</main>
</Layout>

<style>

	.stars {
    background-image: url("/star-pattern.png");
    background-size: 10%;
    animation: pan 180s linear infinite;
    opacity: 0.3;
    position: absolute;
    overflow: hidden;
    z-index: 0;
}

.stars::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, transparent, rgb(249 115 22));
}

@keyframes pan {
    0% {
        background-position: 0% 0%;
    }

    100% {
        background-position: 100% 0%;
    }
}
</style>
